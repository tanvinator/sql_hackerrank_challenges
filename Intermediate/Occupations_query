
--===============================================================================================================================================================================
Query:

DECLARE @phrase NVARCHAR(20) = 'There are a total of' 

SELECT CONCAT(Name, '(', UPPER(LEFT(Occupation, 1)), ')')
FROM OCCUPATIONS
ORDER BY Name


SELECT CONCAT(@phrase, ' ', COUNT(*), ' ', 
                 LOWER(Occupation), 's.')
FROM OCCUPATIONS
GROUP BY Occupation
ORDER BY COUNT(*), Occupation;
